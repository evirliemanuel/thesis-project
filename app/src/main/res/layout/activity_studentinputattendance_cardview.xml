<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newid_attendance_input_cardview"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardElevation="5dp"
    android:clickable="true"
    card_view:cardCornerRadius="5dp"
    tools:context=".InputAttendance_Cardview">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">
            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/f_data_student_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/student_profile_male"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp">



                    <TextView
                        android:id="@+id/newid_student_name_inputattendance"
                        android:layout_gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading ..."
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        />



            </RelativeLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ToggleButton
                        android:textOff=""
                        android:textOn=""
                        android:id="@+id/btn_present"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:background="@drawable/toggle_present"/>

                    <ToggleButton
                        android:textOff=""
                        android:textOn=""
                        android:id="@+id/btn_absent"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="@drawable/toggle_absent"/>
                </LinearLayout>
            </FrameLayout>


        </LinearLayout>
        <FrameLayout
            android:id="@+id/absent_option"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:id="@+id/radiot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorClouds">

                <RadioGroup
                    android:id="@+id/radi_group_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/attendance_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:text="Absent"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <RadioButton
                        android:id="@+id/attendance_late"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Late"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/attendance_excuse"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:text="Excuse"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </RadioGroup>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>