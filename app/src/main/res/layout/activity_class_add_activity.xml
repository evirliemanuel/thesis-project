<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_clazz__activity"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity_Class_Add_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/activity_main_custom_toolbar"
            layout="@layout/custom_toolbar_red"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:background="@drawable/basic_ripple_nocolor"
                android:clickable="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="@drawable/new_icon_back_button"/>
            </LinearLayout>

            <TextView
                android:layout_marginLeft="65dp"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activities"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>


            <ImageView
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:id="@+id/img_back"
               android:layout_marginTop="25dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cancel_icon"
                android:clickable="true"/>
        </FrameLayout>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/carview_add"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/relative_clicked1"
            android:background="@drawable/basic_ripple"
            android:clickable="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:background="@drawable/icon_button_add"
                android:layout_marginBottom="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

            </ImageView>


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Activities"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap here to add"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
