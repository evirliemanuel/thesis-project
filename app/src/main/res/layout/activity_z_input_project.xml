<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectInputActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/main_header_toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/input_back5"
                    android:layout_gravity="left|center"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_arrow_back_white_24dp"/>


                <TextView
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Projects"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>

                <ToggleButton
                    android:layout_gravity="right|center"
                    android:id="@+id/btn_search_class"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginRight="16dp"
                    android:background="@drawable/btn_search"/>


            </FrameLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/icon_calendar" />

                <TextView
                    android:id="@+id/input_date5"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="--/--/--"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ToggleButton
                    android:layout_gravity="right|center"
                    android:id="@+id/input_submit5"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="12dp"
                    android:textOff="Save"
                    android:textOn=""
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:background="@drawable/primarydark_ripple"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"/>

            </FrameLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/input_detailts5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:text="Title :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:text="Total :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/input_name5"
                            android:hint="Project"
                            android:textSize="16dp"
                            android:textColorHint="#000000"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/input_total5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Total"
                            android:textColorHint="#000000"
                            android:inputType="number"
                            android:textSize="16dp"
                            />



                    </LinearLayout>


                </LinearLayout>





            </FrameLayout>

            <FrameLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <ToggleButton
                    android:id="@+id/input_hideandshow5"
                    android:background="@color/colorClouds"
                    android:textOff="Hide"
                    android:textOn="Show"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


    <FrameLayout
        android:background="@color/colorClouds"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name "
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:layout_gravity="right|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score "
            android:textSize="16sp"/>

    </FrameLayout>


    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:id="@+id/input_failedemp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/colorLightDanger"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data saving failed"
                        android:textSize="14dp"
                        android:textColor="#000000"/>
                    <TextView

                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empty total!"
                        android:textSize="14dp"
                        android:textColor="#000000"/>



                </LinearLayout>







            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/input_tryagainemp5"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="TRY AGAIN"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/tryagain_button"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"

                    />



            </FrameLayout>





        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:id="@+id/input_failed5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/colorLightDanger"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data saving failed"
                        android:textSize="14dp"
                        android:textColor="#000000"/>

                    <TextView

                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invalid score!"
                        android:textSize="14dp"
                        android:textColor="#000000"/>



                </LinearLayout>







            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/input_tryagain5"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="TRY AGAIN"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/tryagain_button"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"

                    />



            </FrameLayout>





        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:id="@+id/input_succes5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/colorTweeterBlue"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data has been successfully saved"
                    android:textSize="14dp"
                    android:textColor="#000000"/>


            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/input_ok5"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="OK"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/ok_button"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"

                    />



            </FrameLayout>





        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/input_recyclerview5"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>