<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_slidebar_cardview_clazz"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <FrameLayout
            android:id="@+id/image_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/button_click"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/cover_photos"
                android:clickable="true" />

            <RelativeLayout
                android:id="@+id/class_cardview_progressbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="#87ffffff">

                <ProgressBar
                    android:id="@+id/class_cardview_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_parent_layout"
            android:background="@color/colorWhite"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_slidebar_cardview_clazz_text_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Subject Name"
                    android:textColor="@color/colorMidNightBlue"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragment_slidebar_cardview_clazz_text_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Title"
                    android:textColor="@color/colorMidNightBlue"
                    android:textSize="12sp" />
            </LinearLayout>


        </FrameLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>