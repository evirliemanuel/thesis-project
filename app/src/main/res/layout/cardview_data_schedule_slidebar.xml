<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_slidebar_cardview_schedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    android:clickable="true"
    card_view:cardCornerRadius="5dp"
    android:background="@drawable/basic_ripple">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:id="@+id/button_click_schedule"
        android:background="@drawable/basic_ripple">

        <ImageView
            android:id="@+id/fragment_slidebar_cardview_schedule_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/fragment_slidebar_cardview_schedule_text_subject"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="16dp"
            android:text="Loading ..."
            android:textColor="@color/colorMidNightBlue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fragment_slidebar_cardview_schedule_text_schedule"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="45dp"
            android:text=""
            android:textColor="@color/colorMidNightBlue"
            android:textSize="14sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>