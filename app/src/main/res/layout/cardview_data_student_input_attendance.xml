<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/f_data_student_input_grade_att"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    card_view:cardElevation="2dp"
    android:clickable="true"
    card_view:cardCornerRadius="5dp"
    tools:context=".InputAttendance_Cardview">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_attendance_la"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorWhite">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:id="@+id/f_data_student_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/student_profile_male"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/attendance_input_studentname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading ..."
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
             >



            <LinearLayout
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ToggleButton
                    android:textOff=""
                    android:textOn=""
                    android:id="@+id/btn_present"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/toggle_present"/>

                <ToggleButton
                    android:textOff=""
                    android:textOn=""
                    android:id="@+id/btn_absent"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/toggle_absent"/>
            </LinearLayout>
            </FrameLayout>


            </LinearLayout>

        <FrameLayout
            android:id="@+id/absent_option"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:id="@+id/radiot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorClouds">

                <RadioGroup
                    android:id="@+id/radi_group_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/attendance_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:text="Absent"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                    <RadioButton
                        android:id="@+id/attendance_late"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Late"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/attendance_excuse"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:text="Excuse"
                        android:textSize="16dp"
                        android:textStyle="bold" />



                </RadioGroup>

            </LinearLayout>


        </FrameLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>