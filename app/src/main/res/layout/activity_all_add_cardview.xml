<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_cardview_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@drawable/basic_ripple"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:contextClickable="true"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/basic_ripple"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_activity"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp" />

        <LinearLayout
          android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:enabled="false"
                android:id="@+id/add_cardview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading ..."
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/add_cardview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Loading ..."
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="16dp"
                android:layout_gravity="center"/>
            <TextView
                android:textAlignment="center"
                android:enabled="false"
                android:inputType="number"
                android:layout_gravity="center"
                android:id="@+id/add_cardview_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00"
                android:textStyle="bold"
                android:textColorHint="@color/colorAccent"
                android:textSize="25sp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/add_option"
            android:background="@drawable/icon_pencil"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|center"
            android:layout_width="20dp"
            android:layout_height="25dp" />
    </FrameLayout>

    <LinearLayout
        android:background="@color/colorWhite"
        android:id="@+id/add_linearoption"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <FrameLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/add_cardview_delete"
                android:text="Delete"
                android:background="#e74c3c"
                android:layout_gravity="left|center"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/add_cardview_cancel"
                    android:text="Cancel"
                    android:background="#ecf0f1"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />

                <Button
                    android:id="@+id/add_cardview_save"
                    android:text="Save"
                    android:background="#2980b9"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:enabled="false"/>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>