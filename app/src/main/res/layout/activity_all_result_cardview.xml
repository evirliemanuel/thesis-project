<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_cardview_cardview"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    card_view:cardElevation="3dp"
    android:clickable="true"
    card_view:cardCornerRadius="1dp"
    tools:context=".Activity_All_Result_Cardview">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/result_cardview_init"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="S"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />
            </FrameLayout>


            <TextView
                android:id="@+id/result_cardview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:text="Loading ..."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16dp"/>
        </LinearLayout>

        <FrameLayout

            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
               android:layout_marginRight="8dp"
                android:layout_gravity="right|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:id="@+id/result_cardview_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:textSize="18dp"
                        android:textAlignment="center"/>

                </LinearLayout>


                <ToggleButton
                    android:id="@+id/result_option"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="50dp" />

            </LinearLayout>




        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_linearoption"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_marginBottom="7dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/result_cardview_delete"
            android:text="Delete"
            android:background="#e74c3c"
            android:layout_gravity="left|center"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <Button
            android:id="@+id/result_cardview_cancel"
            android:text="Cancel"
            android:background="#ecf0f1"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
        <Button
            android:id="@+id/result_cardview_save"
            android:text="Save"
            android:background="#2980b9"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    </LinearLayout>





</android.support.v7.widget.CardView>