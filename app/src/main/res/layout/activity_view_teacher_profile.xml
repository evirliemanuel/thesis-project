<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorClouds"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.lieverandiver.thesisproject.Teacher_Activity_Teacher_Profile">


    <RelativeLayout
        android:id="@+id/sadaaaasda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/cardview_light_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/activity_login_header"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            >

            <ImageView
                android:id="@+id/a_teacher_profile_cover_photos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cover_photos"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/dsdd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/a_teacher_profile_profile_photos"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/student_profile_male"
                android:layout_gravity="center|top" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/activity_login_header"
            android:layout_toEndOf="@+id/dsdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            <TextView
                android:id="@+id/a_teacher_profile_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manuel, Virlie E."
                android:textSize="22dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/a_teacher_profile_department_text"
                android:layout_below="@+id/a_teacher_profile_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textSize="15dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/a_teacher_profile_setting_btn"
                        android:clickable="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/setting_icon"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/activity_teacher_profile_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sadaaaasda"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/icon_calendar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject"
                        android:textColor="@color/colorMidNightBlue"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/a_teacher_profile_subject_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/activity_teacher_profile_cardview">
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
